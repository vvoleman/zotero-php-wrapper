{
	"name": "vvoleman/zotero-php-wrapper",
	"description": "Zotero API wrapper for PHP",
	"type": "library",
	"license": "MIT",
	"autoload": {
		"psr-4": {
			"ZoteroApi\\": "src/ZoteroApi"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"ZoteroApi\\Tests\\": "tests/"
		}
	},
	"authors": [
		{
			"name": "vvoleman",
			"email": "vvoleman@seznam.cz"
		}
	],
	"scripts": {
		"testdox-unit": "./vendor/bin/phpunit --bootstrap vendor/autoload.php --group Unit --testdox --colors=always tests/",
		"testdox-integration": "./vendor/bin/phpunit --bootstrap vendor/autoload.php --group Integration --testdox --colors=always tests/"
	},
	"require": {
		"php": "^8.0",
		"guzzlehttp/guzzle": "^7.0",
		"vlucas/phpdotenv": "^5.4"
	},
	"require-dev": {
		"squizlabs/php_codesniffer": "3.*",
		"phpunit/phpunit": "^9.5",
		"phpstan/phpstan": "^1.4",
		"symfony/var-dumper": "^6.0",
		"suin/phpcs-psr4-sniff": "^3.0"
	}
}
